<%- include("../includes/head") %>
<section class="mx-auto">
  <h1 class="title form-title">Upload Profile</h1>
  <% if(errorMsg){ %>
  <p class="msg-box"><%= errorMsg %></p>
  <% }%>
  <form action="/admin/set-profile" method="post" enctype="multipart/form-data">
    <input hidden value="<%= csrfToken %>" name="_csrf" />
    <div>
      <label for="photo">Upload image</label>
      <input type="file" id="photo" name="photo" />
    </div>
    <button>Upload Profile</button>
  </form>
</section>

