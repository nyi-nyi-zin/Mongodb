<%- include("../includes/head") %> <% if(postsArr.length > 0){ %>
<section class="header">
  <div class="own-user">
    <div class="ic-email">
      <% if(postsArr[0].userId.isPremium && postsArr[0].userId.profile_imgUrl ){
      %>
      <img
        src="<%='/'+ postsArr[0].userId.profile_imgUrl %>"
        alt="profile-image"
        class="profile-photo"
      />
      <% } %>

      <p class=""><%= currentUserEmail%></p>

      <% if(postsArr[0].userId.username) {%>
      <p class="premium-username">
        <%= postsArr[0].userId.username %> <% if(postsArr[0].userId.isPremium){
        %>
        <i
          class="fa-regular fa-star animate__animated animate__jello animate__infinite infinite"
        ></i>
      </p>
      <%}%> <%}else{%>
      <p class="premium-username"><%= postsArr[0].userId.username %></p>
      <%}%>
    </div>
    <div class="own-user-right">
      <a href="/admin/username">Set username</a>

      <% if(postsArr[0].userId.isPremium){ %>
      <a href="/admin/profile-image">Upload Profile</a>

      <a href="/admin/premium-details">IO premium status</a>
      <% }else{ %>
      <a href="/admin/premium">Buy IO premium</a>
      <% } %>
    </div>
  </div>
  <div class="post-container">
    <% for(let post of postsArr) { %>
    <div class="post-box">
      <img
        src="<%= '/' + post.imgUrl %>"
        alt="<%= post.title %>"
        class="post-box-img"
      />
      <a class="post-title" href="/post/<%= post._id %>"
        ><%= post.title.substr(0,40) %></a
      >
      <p class="post-des"><%= post.description.substr(0,100) %></p>
      <hr />
    </div>
    <% } %>
  </div>
  <div class="paginate">
    <% if(hasNextPage) {%>
    <a href="/admin/profile?page=<%= nextPage%>">Next Page <%= nextPage%></a>
    <% } %> <% if(hasPreviousPage) {%>
    <a href="/admin/profile?page=<%= previousPage%>"
      >Previous Page <%= previousPage%></a
    >
    <% } %>
  </div>
</section>
<%}else{%>
<h1>Create A New Post First</h1>
<a href="/admin/create-post">Create Post</a>
<% } %> <%- include("../includes/foot") %>
